<odoo>
    <data>
        <!-- Ereditiamo la vista originale di account.move -->
        <record id="view_account_move_booking_form_inherit" model="ir.ui.view">
            <field name="name">account.move.booking.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name="ref" position="after">

                    <field name="checkin"/>
                    <field name="checkout"/>
                    <field name="firstName"/>
                    <field name="channelNotes"/>
                </field>

                <field name="invoice_date" position="after">
                    <field name="createTime"/>
                    <field name="updateTime"/>
                    <field name="totalPaid"/>
                </field>

                <notebook position="inside">
                    <xpath expr="//field[@name='fiscal_position_id']" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </xpath>
                    <!-- Your custom pages go here -->
                    <page string="Informazioni generali della prenotazione">
                        <group>
                            <group>
                                <field name="refer"/>
                                <field name="checkin"/>
                                <field name="checkout"/>
                                <field name="createTime"/>
                                <field name="updateTime"/>
                                <field name="phone"/>
                                <field name="roomGross"/>
                                <field name="totalGross"/>
                            </group>
                            <group>
                                <field name="status"/>
                                <field name="channelNotes"/>
                                <field name="children"/>
                                <field name="infants"/>
                                <field name="totalGuest"/>
                            </group>
                        </group>
                    </page>
                    <page string="Altre informazioni di prenotazione">
                        <group>
                            <group>
                                <field name="arrivalTime"/>
                                <field name="channelName"/>
                                <field name="currency"/>
                                <field name="firstName"/>
                                <field name="lastName"/>
                                <field name="booking_id"/>
                            </group>
                            <group>
                                <field name="guestMailAddress"/>
                                <field name="paymentStatus"/>
                                <field name="paymentType"/>
                                <field name="product_id"/>
                                <field name="roomName"/>
                                <field name="rooms"/>
                                <field name="totalChildren"/>
                                <field name="totalInfants"/>
                                <field name="totalPaid"/>
                                <field name="touristTax"/>
                            </group>
                        </group>
                    </page>
                </notebook>


            </field>

        </record>
    </data>
</odoo>
